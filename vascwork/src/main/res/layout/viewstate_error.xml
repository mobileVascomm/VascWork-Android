<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/layout_error"
              android:gravity="center_vertical"
              >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium"
            android:layout_marginEnd="@dimen/medium"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/img_error"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                tools:src="@drawable/abc_vector_test"
                />

        <TextView
                android:id="@+id/txt_error_title"
                style="@style/TextTitle"
                android:layout_below="@id/img_error"
                android:text="Selamat Tabungan Anda \n Berhasil Dibuat"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/large"
                android:layout_marginBottom="@dimen/large"
                android:textSize="@dimen/font_large"/>

        <TextView
                android:id="@+id/txt_error_msg"
                style="@style/TextContent"
                android:layout_below="@id/txt_error_title"
                tools:text="Anda telah berhasil mendaftar sebagai Nasabah BNI Syariah. Untuk selanjutnya silakan aktivasi akun anda"
                android:gravity="center"
                android:layout_marginStart="@dimen/medium"
                android:layout_marginEnd="@dimen/medium"
        />

        <Button
                android:id="@+id/btn_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large"
                android:layout_marginBottom="@dimen/medium"
                android:layout_below="@id/txt_error_msg"
                tools:text="Aktivasi Disini"/>

    </RelativeLayout>
</LinearLayout>
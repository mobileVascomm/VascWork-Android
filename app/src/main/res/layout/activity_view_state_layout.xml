<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewstatelayout.ViewStateLayoutActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium"
        android:id="@+id/btn_loading"
        android:text="Loading"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium"
        android:layout_toRightOf="@id/btn_loading"
        android:id="@+id/btn_error"
        android:text="Error"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium"
        android:layout_toRightOf="@id/btn_error"
        android:id="@+id/btn_content"
        android:text="Content"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium"
        android:layout_below="@id/btn_error"
        android:id="@+id/btn_custom"
        android:text="custom error"/>
    <com.vascomm.vascwork.additional.view.ViewStateLayout
        android:id="@+id/layout_viewstate"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/font_xlarge"
            android:text="This is Content"/>
    </com.vascomm.vascwork.additional.view.ViewStateLayout>
</RelativeLayout>